/dts-v1/;
#include <st/f1/stm32f103Xb.dtsi>
#include <st/f1/stm32f103c(8-b)tx-pinctrl.dtsi>

/ {
	model = "stm32_esc";
	compatible = "stm32_esc";

	chosen {
		zephyr,console = &usart1;
        zephyr,shell-uart = &usart1;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
	};

    aliases {
        led0 = &led_red;
        led1 = &led_green;
        led2 = &led_blue;
    };

	leds {
        compatible = "gpio-leds";
        led_red: led_red {
            gpios = <&gpioc 15 GPIO_ACTIVE_LOW>;
        };
        led_green: led_green {
            gpios = <&gpioc 14 GPIO_ACTIVE_LOW>;
        };
        led_blue: led_blue {
            gpios = <&gpioc 13 GPIO_ACTIVE_LOW>;
        };
    };

	gpio_keys {
		compatible = "gpio-keys";
	};
};

&clk_hse {
	clock-frequency = <DT_FREQ_M(8)>;
	status = "okay";
};

&pll {
	mul = <9>;
	clocks = <&clk_hse>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(72)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <2>;
	apb2-prescaler = <1>;
};

&usart1 {
	pinctrl-0 = <&usart1_tx_pa9 &usart1_rx_pa10>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
};

&usart3 {
	pinctrl-0 = <&usart3_tx_pb10 &usart3_rx_pb11>;
	pinctrl-names = "default";
	current-speed = <19200>;
	status = "okay";

    lin0: lin0 {
        compatible = "zephyrboards,lin-uart";
        status = "okay";
        bitrate = <19200>;
        max-wait-percent = <200>;
    };
};
