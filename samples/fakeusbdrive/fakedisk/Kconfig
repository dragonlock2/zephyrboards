config DISK_DRIVER_FAKE
    bool "Enable fake disk driver"

if DISK_DRIVER_FAKE

config DISK_FAKE_VOLUME_NAME
    string "Fake disk mount point or drive name"
    default "FAKE"

config DISK_FAKE_SECTOR_SIZE
    int "Fake disk sector size in bytes"
    default 512

config DISK_FAKE_SECTOR_COUNT
    int "Fake disk number of sectors"
    default 512

module = FAKEDISK
module-str = fakedisk
source "subsys/logging/Kconfig.template.log_config"

endif # DISK_DRIVER_FAKE
